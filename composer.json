{
	"name": "alexanderomara/flarum-gravatar",
	"description": "Flarum Gravatar: Use Gravatar for user avatars",
	"keywords": [
		"flarum",
		"gravatar",
		"user",
		"avatar"
	],
	"homepage": "https://github.com/AlexanderOMara/flarum-gravatar",
	"support": {
		"source": "https://github.com/AlexanderOMara/flarum-gravatar",
		"issues": "https://github.com/AlexanderOMara/flarum-gravatar/issues"
	},
	"license": "MPL-2.0",
	"type": "flarum-extension",
	"require": {
		"flarum/core": "^0.1.0-beta.15"
	},
	"autoload": {
		"psr-4": {
			"AlexanderOMara\\FlarumGravatar\\": "src/"
		}
	},
	"extra": {
		"flarum-extension": {
			"title": "Gravatar",
			"icon": {
				"image": "icon.svg",
				"backgroundColor": "#1E8CBE"
			}
		}
	},
	"archive": {
		"exclude": [
			".*",
			"/scripts",
			"/docker",
			"/js",
			"!/js/dist"
		]
	}
}
